class sine
{
  float amplitude = 50;
  float angle = 0.0;
  void display(){
    
    pushMatrix();
    translate(100,500);
    float x = amplitude * sin(angle);
    fill(96, 75, 75);
    stroke(0);
    line(0,0,x,0);
    ellipse(x,0,36,36);
    
    
    angle += 0.1;
    popMatrix();
    pushMatrix();
    translate(900,500);
    x = amplitude * sin(angle);
    fill(96, 75, 75);
    stroke(0);
    line(0,0,x,0);
    ellipse(x,0,36,36);
    
    
    angle += 0.02;
    popMatrix();
    
  }
}
